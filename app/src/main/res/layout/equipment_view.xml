<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/equipment_item_width"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/medium_margin"
              tools:background="@color/appBackground">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/equipment_item_image_size"
        android:layout_height="@dimen/equipment_item_image_size"
        android:tint="@color/white"
        tools:src="@drawable/ic_equip_dumbbell"
        android:contentDescription="@string/equipment_image"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/subtitle_text_size"
        tools:text="Dumbbell"/>

</LinearLayout>